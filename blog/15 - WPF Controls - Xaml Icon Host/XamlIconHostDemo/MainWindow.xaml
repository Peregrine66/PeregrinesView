        <!--  this will be applied on top of the style from the library which is loaded in App.xaml  -->
        <Style
            BasedOn="{StaticResource {x:Type Button}}"
            TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="8" />
        </Style>
    </vctrl:perViewBase.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0">
            <vctrl:perXamlIconHost
                Caption="X-Small / Above"
                CaptionPosition="AboveIcon"
                IconSize="XSmall"
                XamlIcon="{StaticResource TestIcon}" />
        </Button>

        <Button Grid.Row="1">
            <vctrl:perXamlIconHost
                Caption="Small / Below"
                CaptionPosition="BelowIcon"
                IconSize="Small"
                XamlIcon="{StaticResource TestIcon}" />
        </Button>

        <Button Grid.Row="2">
            <vctrl:perXamlIconHost
                Caption="Medium / Left"
                CaptionPosition="ToLeftOfIcon"
                IconSize="Medium"
                XamlIcon="{StaticResource TestIcon}" />
        </Button>

        <Button Grid.Row="3">
            <vctrl:perXamlIconHost
                Caption="Large / Right"
                CaptionPosition="ToRightOfIcon"
                IconSize="Large"
                XamlIcon="{StaticResource TestIcon}" />
        </Button>

        <StackPanel
            Grid.Row="4"
            Orientation="Horizontal">
            <Button>
                <vctrl:perXamlIconHost
                    Caption="Extra-Large / None"
                    CaptionPosition="None"
                    IconSize="ExtraLarge"
                    XamlIcon="{StaticResource TestIcon}" />
            </Button>

            <TextBlock
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                Text="XLarge / No Caption" />
        </StackPanel>

        <Button
            Grid.Row="5"
            IsEnabled="False">
            <vctrl:perXamlIconHost
                Caption="Extra-Extra-Large / Button Disabled"
                IconSize="ExtraExtraLarge"
                XamlIcon="{StaticResource TestIcon}" />
        </Button>

        <Button Grid.Row="6">
            <StackPanel Orientation="Horizontal">
                <ContentControl
                    Width="50"
                    Height="50"
                    Content="{StaticResource TestIcon}" />

                <TextBlock
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    Text="TestIcon alone, no host&#x0a;Note the colours" />
            </StackPanel>
        </Button>
    </Grid>
</vctrl:perViewBase>
